<header>
    <div>
        <div id="header-div-id" class="page-header">

            <div class="col-md-2">
                <% if(locals.appState.get('currentUser') !== null) { %>
                <% if(locals.viewState.get('mainParentView') !== null && locals.viewState.get('mainParentView').givenName === '@PortalView') { %>
                <div>
                    <a href="#menu-toggle" class="btn btn-default" id="menu-toggle">Toggle Menu</a>
                </div>
                <% } %>
                <% } %>
            </div>

            <div id="error-dialog"></div>
            <div class="col-md-2">
                <p><font color="red"> Socket connected?: <span
                                adhesive-value="socket:connected"><%= locals.socketConnection.connected %></span></font>
                </p>
            </div>

            <div class="btn-group col-md-6" role="group" aria-label="...">
                <button class="btn btn-default" id="reset-all-button-id">Reset-all</button>
                <button class="btn btn-default" id="reset-front-end-button-id">Reset-Front-End</button>
                <button class="btn btn-default" id="reset-back-end-button-id">Reset-Backend</button>
                <button class="btn btn-default" id="reconnect-socket-button-id">(Re)connect-Socket</button>
                <button class="btn btn-default" id="disconnect-socket-button-id">Disconnect-Socket</button>
            </div>


            <div class="col-md-2">
                <% if(locals.appState.get('currentUser') !== null) { %>
                <div>Logged In
                    As: <b><%= locals.appState.get('currentUser').get('username') %></b>
                </div>
                <% } else { %>
                <div>You need to either register or login.</div>
                <% } %>
            </div>

        </div>
    </div>
</header>